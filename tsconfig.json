{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./build",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "declaration": true,
      "sourceMap": true
    },
    "include": [
      "main.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "build"
    ]
  }